<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/congrats"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Congrats" >

    <TextView
        android:id="@+id/congrats_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/transparent"
        android:text="@string/congrats_message"
        android:textColor="@color/black"
        android:textSize="@dimen/size" />

    <TextView
        android:id="@+id/user_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:background="@color/transparent"
        android:text="@string/user_score"
        android:textColor="@color/black"
        android:textSize="@dimen/gap" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_score"
        android:layout_alignParentLeft="true"
        android:background="@color/transparent"
        android:text="@string/score"
        android:textColor="@color/black"
        android:textSize="@dimen/size" />

    <Button
        android:id="@+id/get_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_score"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:text="@string/get_score"
        android:textColor="@color/black"
        android:textSize="@dimen/data_size" />

"

"

</RelativeLayout>
